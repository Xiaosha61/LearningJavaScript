{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build/",
        "noUnusedParameters": false,
        "noUnusedLocals": false,
        "experimentalDecorators": true
    },
    "files": [
        "classDecorator.ts",
        "methodDecorator.ts",
        "try.ts",
        "readonly.ts",
        "order.ts"
    ],
    "include": [
        "src/**.ts",
        "test/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}