{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "target": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "build/",
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "include": [
        "src/**.ts",
        "test/**.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
