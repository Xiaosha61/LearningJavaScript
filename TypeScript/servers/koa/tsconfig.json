{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",  //different ways to import module
        "target": "ES2015",
        "moduleResolution": "node",
        "noImplicitAny": false,
        "sourceMap": false,  //produce build/**.map showing how it transcompiles
        "outDir": "build/",
        "noUnusedParameters": false,
        "noUnusedLocals": false
    },
    "include": [
        "src/*.ts",
        "test/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
